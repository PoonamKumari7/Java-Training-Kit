<?xml version="1.0" encoding="UTF-8"?>  
<beans
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 
               
     


<bean id="r" class="techment.model.Restraunt"> <!-- by assigning value to id, we are creating object of the class Restraunt -->
<property name="restrauntName" value="A2B"></property>
<!-- <property name="tea" ref="t"></property> -->
<property name="hotDrink" ref="c"></property>
<property name="softDrink" ref="ma"></property>
</bean>     
 
<bean id="t" class="techment.model.Tea">
<property name="price" value="10"></property>
</bean> 
 
<bean id="c" class="techment.model.Coffee">
</bean>

<bean id="m" class="techment.model.Milk">
</bean>

<bean id="p" class="techment.model.Pepsi">
</bean>
 
<bean id="ma" class="techment.model.Maaza">
</bean>
 
</beans>   